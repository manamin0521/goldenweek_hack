<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-sm-10">
		<div class="edit">
			<button type="button" class="btn btn-default"　<%= link_to 'Edit', edit_post_path(@post) %></button>
		</div>
	</div>
</div>

<p class="post_name">
  <strong></strong>
  <a><%= @post.name %></a>
</p>


	<div class="image_body">
		<p class="image">
			<strong></strong>
			<%= image_tag @post.image.to_s, :size => "300x200" %>
		</p>	
	</div>

<div class="Overview">
	<div class="tec_point_link">
		<p>
			<strong>概要:</strong>
			<%= @post.body %>
		</p>
		<p>
			<strong>技術、言語:</strong>
			<%= @post.tec %>
		</p>

		<p>
			<strong>おすすめポイント:</strong>
			<%= @post.point %>
		</p>

		<p>
			<strong>リンク:</strong>
			<%= @post.link %>
		</p>
	</div>
</div>
<div class="row">
	<div class="col-sm-4">
		<div class="back">
			<button type="button" class="btn btn-default"　<%= link_to 'Back', posts_path %></button>
		</div>
	</div>
</div>