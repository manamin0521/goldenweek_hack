<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">

        <% @posts.each do |post| %>
          <tr>
            <h3><td><%= post.name %></td></h3>
            <td><%= image_tag post.image.to_s, :size => "300x200" %></td>
            <td><%= post.body %></td>
            
          </tr>
          <%= link_to '詳細', post %>
          <p><a class="btn btn-primary" role="button">詳細</a></p>
        <% end %>
        </div>
    </div>
  </div>
</div>


